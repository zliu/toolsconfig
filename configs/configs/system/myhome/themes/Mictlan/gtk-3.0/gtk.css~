@define-color progressbar_border #DEDEDE; /* #87a964; */

@define-color menuitem_background_a #666666;
@define-color menuitem_background_b #4D4D4D;

@define-color theme_border_color_a #DEDEDE;
@define-color theme_border_color_b #D1D1D1;
@define-color scrollslider_gradient_a shade (@selected_bg_color, 0.8);
@define-color scrollslider_gradient_b shade (@selected_bg_color, 0.7);
@define-color scrollslider_border shade (@selected_bg_color, 0.9);
@define-color listview_header_gradient_a #D1D1D1;
@define-color listview_header_gradient_b #C4C4C4;
